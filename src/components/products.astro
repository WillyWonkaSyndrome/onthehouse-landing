---
import ContentSection from "~/components/content-section.astro";
import type { ProductItem } from "~/types";
import { Image } from "astro:assets";
import Bottle from "~/assets/bottle.png";
import Babywipes from "~/assets/babywipes.png";
import Socks from "~/assets/socks.png";
import Plus from "~/assets/plus.png";
const products: Array<ProductItem> = [
  {
    title: "물병",
    description: "가장 무난하게 나눔할 수 있는 제품",
    imgSrc: Bottle,
  },
  {
    title: "물티슈",
    description: "거부감 없이 나눔할 수 있는 소모품",
    imgSrc: Babywipes,
  },
  {
    title: "양말",
    description: "신발 광고에 특화된 제품",
    imgSrc: Socks,
  },
  {
    title: "More",
    description: "원하시는 제품을 협의 후 제작할 수도 있습니다.",
    imgSrc: Plus,
  },
];
---

<ContentSection title="무료나눔 제품" id="products">
  <Fragment slot="lead">
    <p>
      여러분을 위해 멋진 <span class="text-primary">AR 전단지</span>가 될 준비가
    </p>
    <p>되어있는 제품 리스트를 소개합니다.</p>
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 sm:grid-cols-2">
    {
      products.map(({ title, description, imgSrc }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6 sm:flex-row">
          <Image
            src={imgSrc as ImageMetadata}
            widths={[400, 800]}
            width="200"
            height="50"
            alt="프로세스 아이콘"
            class="w-1/2 sm:w-1/3"
          />
          <div class="flex flex-col items-center gap-3 sm:items-start">
            <h3 class="text-md font-semibold">{title}</h3>
            <p class="text-offset text-sm">{description}</p>
          </div>
        </li>
      ))
    }
  </ul>
</ContentSection>
